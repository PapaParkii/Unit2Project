@model Videogame
@{
    string title = ViewBag.Action + " Videogame";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>
<!--Edit Videogame-->
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="YearReleased">Year Released</label>
        <input asp-for="YearReleased" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Rating">Rating *1-5</label>
        <input asp-for="Rating" class="form-control" />
    </div>

    <input type="hidden" asp-for="VideogameID" />

    <button type="submit" class="btn btn-primary">Confirm @ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index"
       class="btn btn-primary">Cancel</a>
</form>